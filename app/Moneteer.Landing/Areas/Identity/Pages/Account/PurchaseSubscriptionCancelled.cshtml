@page
@{
    ViewData["Title"] = "Subscription Cancelled";
}
@inject Moneteer.Landing.Helpers.IConfigurationHelper Configuration

<section class="py-3 py-md-5">
    <div class="container-fluid">
        <div class="row">
            <div class="card shadow-lg rounded col-md-8 col-lg-6 offset-md-2 offset-lg-3 p-0">
                <div class="card-body text-center">
                    
                    <h1>
                        <i class="fas fa-times-circle text-danger"></i>
                    </h1>
                    <p>
                        Subscription failed.
                    </p>
                    <p class="text-danger">
                        The checkout was cancelled. 
                    </p>
                </div>
                <div class="card-footer">
                    <a asp-page="PurchaseSubscription" class="btn btn-link">
                        Try again
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
