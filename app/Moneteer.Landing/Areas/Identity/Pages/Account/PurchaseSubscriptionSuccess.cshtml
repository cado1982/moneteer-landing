@page
@{
    ViewData["Title"] = "Subscription Successful";
}
@inject Moneteer.Landing.Helpers.IConfigurationHelper Configuration

<section class="py-3 py-md-5">
    <div class="container-fluid">
        <div class="row">
            <div class="card shadow-lg rounded col-md-8 col-lg-6 offset-md-2 offset-lg-3 p-0">
                <div class="card-body text-center">
                    
                    <h1>
                        <i class="fas fa-check-circle text-success"></i>
                    </h1>
                    <p>
                        Thank you. Your subscription has been confirmed. 
                    </p>
                </div>
                <div class="card-footer">
                    <a href="@Configuration.AppUri" class="btn btn-warning">
                        Launch app
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
