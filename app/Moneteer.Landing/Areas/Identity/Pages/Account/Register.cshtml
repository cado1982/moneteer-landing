@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
@inject Moneteer.Landing.Helpers.IConfigurationHelper ConfigurationHelper



<div class="container my-5">
    <div class="row mb-3">
        <div class="col-md-8 col-lg-6 offset-md-2 offset-lg-3 mb-3 alert alert-primary" role="alert">
            Moneteer is in development. You can still create an account and we'll let you know when the app is ready!
        </div>
    </div>
    
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post" novalidate>
        <div class="row">
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="card shadow-lg rounded col-md-8 col-lg-6 offset-md-2 offset-lg-3 p-0">
                <h5 class="card-header">Register</h5>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control form-control-lg" placeholder="Enter your email" autofocus />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control form-control-lg" placeholder="••••••••••" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg" placeholder="••••••••••" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </div>
        </div>
    </form>

    <div class="m-5 text-center">
        <div>Already have an account?</div>
        <div><a asp-controller="Account" asp-action="Login">Log in</a></div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
